<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="25sp"
    tools:ignore="HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#BEE491">
<LinearLayout
    android:padding="10sp"
    android:orientation="vertical"
    android:layout_width="300sp"
    android:layout_height="match_parent">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/inputlay"
        android:layout_marginTop="10sp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="Appointment Date"
            android:inputType="date"
            android:id="@+id/apdate"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_marginTop="10sp"
    style="@style/inputlay"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:hint="Appointment timings"
        android:inputType="datetime"
        android:id="@+id/timings"
        android:layout_height="match_parent"/>
</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10sp"
        style="@style/inputlay"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:hint="Appointment reason"
            android:gravity="start|bottom"
            android:padding="10sp"
            android:id="@+id/reasons"
            android:layout_height="100sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Fix Appointment"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="20sp"
        android:id="@+id/fixdate"
        android:backgroundTint="#000000"
        android:background="@drawable/curve"
        android:layout_height="wrap_content"/>
</LinearLayout>
</androidx.cardview.widget.CardView>